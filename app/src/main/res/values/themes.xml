<resources>
    <!-- Base application theme. -->
    <style name="Theme.CurrencyConvertor" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorControlHighlight">@color/main_screen</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="toolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/status_bar</item>
    </style>

    <style name="txtName">
        <item name="android:textSize">13sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="rv_main_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/size_10</item>
        <item name="android:layout_marginEnd">@dimen/size_10</item>
        <item name="android:layout_marginTop">@dimen/size_4</item>
        <item name="android:paddingTop">@dimen/size_8</item>
        <item name="android:paddingBottom">@dimen/size_8</item>
        <item name="android:backgroundTint">@color/rv_main_container_color_selector</item>
        <item name="android:background">@drawable/main_rv_item_shape</item>
    </style>

    <style name="ShapeAppearanceOverlay.CircularBorder" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="rv_main_txt">
        <item name="android:layout_width">@dimen/size_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/size_8</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/blue_text_color_selector</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="rv_flag">
        <item name="android:layout_width">@dimen/size_48</item>
        <item name="android:layout_height">@dimen/size_48</item>
        <item name="android:elevation">@dimen/card_elevation_zero</item>
        <item name="android:outlineProvider">bounds</item>
        <item name="android:src">@drawable/inset_holder_flag</item>
    </style>

    <style name="txt_cancel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_16dp</item>
        <item name="android:text">@string/cancel</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/blue_jeans_text_color_selector</item>
    </style>

    <style name="AppMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button_disabled</item>
        <item name="android:layout_width">@dimen/size_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetBottom">@dimen/size_0</item>
        <item name="android:insetTop">@dimen/size_0</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="rv_img_check">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/selected_currency</item>
        <item name="android:src">@drawable/ic_checked</item>
        <item name="android:scaleType">center</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">@dimen/size_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_10dp</item>
        <item name="android:hint">@string/enter_value</item>
    </style>

    <style name="change_currency_txt">
        <item name="android:layout_width">@dimen/size_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/size_8</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/blue_jeans_text_color_selector</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/change_currency</item>
    </style>

</resources>